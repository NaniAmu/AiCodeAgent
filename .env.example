# DigiNest AI Receptionist - Production Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ================================================
# Database Configuration
# ================================================
DB_NAME=diginest
DB_USERNAME=postgres
DB_PASSWORD=change_this_to_strong_password_123!

# ================================================
# JWT Configuration
# ================================================
# Generate with: openssl rand -base64 64
JWT_SECRET=your_jwt_secret_key_here_min_32_characters_long_random_string
JWT_EXPIRATION_MS=86400000

# ================================================
# Application Configuration
# ================================================
SPRING_PROFILES_ACTIVE=prod
SERVER_PORT=8080

# ================================================
# Domain Configuration (for SSL)
# ================================================
DOMAIN=api.yourdomain.com
EMAIL=admin@yourdomain.com

# ================================================
# Optional: Monitoring & Logging
# ================================================
# LOG_LEVEL=INFO
# JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0
